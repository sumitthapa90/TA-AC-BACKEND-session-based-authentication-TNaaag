<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Blog App</h1>
    <a href="/articles/new"><button>Add Blogs</button></a>

    <section>
      <div>
        <% articles.forEach(article => {%>
        <h2>
          <a href="/articles/<%= article.id %>"><%= article.title %></a>
        </h2>
        <% })%>
      </div>
    </section>
  </body>
</html>
